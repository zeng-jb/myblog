<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zeng.dao.TypeDao">

    <!--新增分类-->
    <insert id="saveType" parameterType="Type">
        insert into myblog.t_type values (#{id},#{name})
    </insert>

    <!--删除分类-->
    <delete id="deleteType">
        delete from myblog.t_type where id = #{id}
    </delete>

    <!--修改编辑分类-->
    <update id="updateType" parameterType="Type">
        update myblog.t_type set name = #{name} where id = #{id}
    </update>

    <!--返回所有分类-->
    <select id="getAllType" resultType="Type">
        select * from myblog.t_type;
    </select>

    <!--根据id查询分类-->
    <select id="getType" resultType="Type">
        select * from myblog.t_type where id = #{id}
    </select>

    <select id="getTypeByName" resultType="Type">
        select * from myblog.t_type where name = #{name}
    </select>

    <!--博客和分类是多对一的关系，一篇博客对应一个分类，一个分类可以对应多篇博客-->
    <resultMap id="types" type="Type">
        <id property="id" column="tid"/>
        <result property="name" column="name"/>
        <collection property="blogs" ofType="Blog">
            <id property="id" column="bid"/>
            <result property="title" column="title"/>
            <result property="typeId" column="type_id"/>
        </collection>
    </resultMap>
    <!--查询分类-->
    <select id="getAllTypeAndBlog" resultMap="types">
        select t.id tid, t.name, b.id bid, b.title,b.type_id
        from myblog.t_type t,myblog.t_blog b
        where t.id = b.type_id
    </select>


</mapper>