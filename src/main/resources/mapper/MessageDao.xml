<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zeng.dao.MessageDao">

    <!--添加留言-->
    <insert id="saveMessage" parameterType="Message">
        insert into myblog.t_message (nickname,email,content,avatar,create_time,parent_message_id,admin_message)
        values (#{nickname},#{email},#{content},#{avatar},#{createTime},#{parentMessageId},#{adminMessage});
    </insert>

    <!--查询父级留言-->
    <select id="findParentIdNull" resultType="Message">
        select *
        from myblog.t_message m
        where m.parent_message_id = #{blogParentId}
        order by m.create_time desc
    </select>

    <!--查询一级子留言-->
    <select id="findParentIdNotNull" resultType="Message">
        select *
        from myblog.t_message m
        where m.parent_message_id = #{id}
        order by m.create_time desc
    </select>

    <!--查询二级子留言-->
    <select id="findAndReplayId" resultType="Message">
        select *
        from myblog.t_message m
        where m.parent_message_id = #{childId}
        order by m.create_time desc
    </select>

    <!--删除留言-->
    <delete id="deleteMessage" >
        delete from myblog.t_message where id = #{id}
    </delete>

</mapper>